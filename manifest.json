{
    "manifest_version": 3,
    "name": "Workflow Timer",
    "description": "Timer with default duration of 1 hour (time-blocks)",
    "version": "1.0",
    "browser_action": 
    {
        "default_icon": "icon48.png",
        
        "default_popup": "popup.html",   
        "permissions": [
            "activeTab", 
            "alarm", 
            "storage",
            "tabs",
            "bookmarks"
        ],
        "optional_permissions": [
            "unlimitedStorage"
          ],
        "icons": 
            "128.png",
        

        "content_scripts": ["popup.js", "script.js","popup.css"]

    }
    

}